---
export interface Props {
	title: string;
}

const { title } = Astro.props;
const titleTemplate = '@dungsil'
---
<!DOCTYPE html>
<html lang="ko-KR" dir="ltr" class="dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }{ title === undefined ? '' : ' · ' }{ titleTemplate }</title>

    <link rel="dns-prefetch" href="https://dun.land" />
</head>
<body class="w-full">
    <div class="w-full min-h-screen font-sans font-400 text-base tracking-normal bg-zinc-50 c-zinc-500 dark:c-zinc-400 dark:bg-zinc-900">
      <slot />
    </div>

    <!-- 스크립트 -->
    <script src="https://dun.land/polyfill.min.js?features=es6" />
</body>
</html>
