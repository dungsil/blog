---
import Card from '../components/Card.astro';
import works from '../stores/works.json'
---

<Card title="경험" icon="ph:buildings-duotone">
  <ol class="mt6 space-y-4">
    {works.map((work) => (
      <li class="flex gap4">
        <span aria-hidden="true" class="relative flex flex-none justify-center items-center w10 h10 rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
          <img src={work.logo} alt="" class="w7 h7" />
        </span>
        <dl class="flex flex-auto flex-wrap gap-x-2">
              <dt class="sr-only">Company</dt>
              <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
                {work.project}
              </dd>
              <dt class="sr-only">Role</dt>
              <dd class="text-xs text-zinc-500 dark:text-zinc-400">
                {work.title}
              </dd>
              <dt class="sr-only">Date</dt>
              <dd
              class="ml-auto text-xs text-zinc-400 dark:text-zinc-500"
                aria-label={`${work.start}년부터 ${work.end}년 까지`}
              >
                <time date-time={work.start}>
                  {work.start}
                </time>
                {' '}

                <span aria-hidden="true">—</span>
                {' '}

                <time date-time={work.end}>
                  {work.end ?? '현재'}
                </time>
              </dd>
            </dl>
      </li>
    ))}
  </ol>
</Card>
